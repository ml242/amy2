<% content_for :body_content_title do %>
  <%= @medium.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @medium.title %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @medium.blurb %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @medium.date %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="media">
      <% @media.each do |medium| %>
        <li>
          <%= link_to medium.title, refinery.media_medium_path(medium) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
